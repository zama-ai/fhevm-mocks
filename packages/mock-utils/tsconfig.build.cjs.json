{
  // This file is used to compile CommonJS
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    // Modules
    // =======
    "module": "CommonJS",
    "moduleResolution": "node",

    // Emit
    // ====
    "outDir": "./src/_cjs",
    "removeComments": true,

    // Interop Constraints
    // ===================
    "verbatimModuleSyntax": false
  }
}
